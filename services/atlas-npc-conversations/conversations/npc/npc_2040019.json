{
  "npcId": 2040019,
  "name": "Everton - Ludibrium Random Eye Change",
  "startState": "welcome",
  "states": [
    {
      "id": "welcome",
      "type": "listSelection",
      "listSelection": {
        "title": "Well, I'm bored, so I'll help out the doctor. For a #b#t5152006##k, I will change the way you look. But don't forget, it will be random!",
        "choices": [
          { "text": "Plastic Surgery: #i5152006##t5152006#", "nextState": "generateFaceStyles" },
          { "text": "Exit", "nextState": null }
        ]
      }
    },
    {
      "id": "generateFaceStyles",
      "type": "genericAction",
      "genericAction": {
        "operations": [
          {
            "type": "local:generate_face_styles",
            "params": {
              "baseStyles": "20001,20003,20007,20013,20021,20023,20025,21002,21004,21006,21008,21022,21027,21029",
              "genderFilter": "true",
              "validateExists": "true",
              "excludeEquipped": "true",
              "outputContextKey": "generatedFaces"
            }
          }
        ],
        "outcomes": [
          { "conditions": [], "nextState": "confirmSurgery" }
        ]
      }
    },
    {
      "id": "confirmSurgery",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendYesNo",
        "text": "If you use the regular coupon, your face may transform into a random new look...do you still want to do it using #b#t5152006##k?",
        "choices": [
          { "text": "Yes", "nextState": "checkCoupon" },
          { "text": "No", "nextState": null },
          { "text": "Exit", "nextState": null }
        ]
      }
    },
    {
      "id": "checkCoupon",
      "type": "genericAction",
      "genericAction": {
        "operations": [],
        "outcomes": [
          {
            "conditions": [
              { "type": "item", "operator": ">=", "value": "1", "referenceId": "5152006" }
            ],
            "nextState": "executeFaceChange"
          },
          { "conditions": [], "nextState": "noCoupon" }
        ]
      }
    },
    {
      "id": "executeFaceChange",
      "type": "genericAction",
      "genericAction": {
        "operations": [
          { "type": "destroy_item", "params": { "itemId": "5152006", "quantity": "1" } },
          { "type": "local:select_random_cosmetic", "params": { "stylesContextKey": "generatedFaces", "outputContextKey": "selectedFace" } },
          { "type": "change_face", "params": { "styleId": "{context.selectedFace}" } }
        ],
        "outcomes": [
          { "conditions": [], "nextState": "faceSuccess" }
        ]
      }
    },
    {
      "id": "faceSuccess",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendOk",
        "text": "Enjoy your new and improved face!",
        "choices": [
          { "text": "Ok", "nextState": null },
          { "text": "Exit", "nextState": null }
        ]
      }
    },
    {
      "id": "noCoupon",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendOk",
        "text": "Hmm ... it looks like you don't have the coupon specifically for this place. Sorry to say this, but without the coupon, there's no plastic surgery for you...",
        "choices": [
          { "text": "Ok", "nextState": null },
          { "text": "Exit", "nextState": null }
        ]
      }
    }
  ]
}
