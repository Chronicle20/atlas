{
  "npcId": 9201061,
  "startState": "start",
  "states": [
    {
      "id": "start",
      "type": "listSelection",
      "listSelection": {
        "title": "Hi, there~! I'm Bomack. If you have a #b#t5152035##k, I can prescribe the right kind of cosmetic lenses for you. Now, what would you like to do?",
        "choices": [
          {
            "text": "Cosmetic Lens: #i5152035##t5152035#",
            "nextState": "generateFaceColors"
          },
          {
            "text": "Exit",
            "nextState": null
          }
        ]
      }
    },
    {
      "id": "generateFaceColors",
      "type": "genericAction",
      "genericAction": {
        "operations": [
          {
            "type": "local:generate_face_colors",
            "params": {
              "colorOffsets": "100,200,300,400,500,600,700",
              "validateExists": "true",
              "excludeEquipped": "true",
              "outputContextKey": "faceColors"
            }
          }
        ],
        "outcomes": [
          {
            "conditions": [],
            "nextState": "confirmLensChange"
          }
        ]
      }
    },
    {
      "id": "confirmLensChange",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendYesNo",
        "text": "If you use the regular coupon, you'll be awarded a random pair of cosmetic lenses. Are you going to use #b#t5152035##k and really make the change to your eyes?",
        "choices": [
          {
            "text": "Yes",
            "nextState": "checkCoupon"
          },
          {
            "text": "No",
            "nextState": null
          },
          {
            "text": "Exit",
            "nextState": null
          }
        ]
      }
    },
    {
      "id": "checkCoupon",
      "type": "genericAction",
      "genericAction": {
        "operations": [],
        "outcomes": [
          {
            "conditions": [
              {
                "type": "item",
                "operator": ">=",
                "value": "1",
                "referenceId": "5152035"
              }
            ],
            "nextState": "performLensChange"
          },
          {
            "conditions": [],
            "nextState": "noCoupon"
          }
        ]
      }
    },
    {
      "id": "performLensChange",
      "type": "genericAction",
      "genericAction": {
        "operations": [
          {
            "type": "destroy_item",
            "params": {
              "itemId": "5152035",
              "quantity": "1"
            }
          },
          {
            "type": "local:select_random_cosmetic",
            "params": {
              "stylesContextKey": "faceColors",
              "outputContextKey": "selectedFace"
            }
          },
          {
            "type": "change_face",
            "params": {
              "styleId": "{context.selectedFace}"
            }
          }
        ],
        "outcomes": [
          {
            "conditions": [],
            "nextState": "success"
          }
        ]
      }
    },
    {
      "id": "success",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendOk",
        "text": "Enjoy your new and improved cosmetic lenses!",
        "choices": [
          {
            "text": "Ok",
            "nextState": null
          },
          {
            "text": "Exit",
            "nextState": null
          }
        ]
      }
    },
    {
      "id": "noCoupon",
      "type": "dialogue",
      "dialogue": {
        "dialogueType": "sendOk",
        "text": "I'm sorry, but I don't think you have our cosmetic lens coupon with you right now. Without the coupon, I'm afraid I can't do it for you..",
        "choices": [
          {
            "text": "Ok",
            "nextState": null
          },
          {
            "text": "Exit",
            "nextState": null
          }
        ]
      }
    }
  ]
}
